!!!
%html
  %head
    %title Riverside Ruby
    %link{:rel=>'stylesheet', :href=>'/css/stylesheet.css', :type => "text/css"} 
    / / javascripts
    %script{:type => "text/javascript", :src  => "/javascripts/libs/jquery.js"}
    %script{:type => "text/javascript", :src  => "/javascripts/libs/json2.js"}
    %script{:type => "text/javascript", :src  => "/javascripts/libs/underscore-min.js"}
    %script{:type => "text/javascript", :src  => "/javascripts/libs/backbone-min.js"}
    %script{:type => "text/javascript", :src  => "/javascripts/application.js"}
    %script{:type => "text/javascript", :src  => "/javascripts/views/pages/pages.js"}
    %script{:type => "text/javascript", :src  => "/javascripts/controllers/pages.js"}
 
  %body
    #wrapper
      #header
        #logo
          %img{:src => '/images/logo-hd.png'}
        #menu-wrapper
          #menu
            %ul
              %li 
                %a{:href => 'http://mengfung.com'} Home
              %li
                %a{:href => 'http://mengfung.com'} Members
              %li
                %a{:href => 'http://mengfung.com'} Login
        
        #meeting-wrapper
          #meeting
            %h1
              = Time.parse(@meetup['time']).strftime("Next Meeting (%A %B %d, %Y at %I:%M%p)")
            #meeting-content
              %a{:href => @meetup['event_url'], :target => '_blank'} 
                = @meetup['venue_name']
              %br
              = @meetup['venue_address1']
              %br
              #{@meetup['venue_city']}, #{@meetup['venue_state']} #{@meetup['venue_zip']}
              
        
        %br.clear
    
      #container
        #app-wrapper
          #app
        #sidebar
        
      #footer
  %script{:type => "text/javascript"}
    \$(function(){
    \ App.init();
    \});